@model CreateOrUpdateExamViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Examen</h2>

<h4>Créer un nouvel examen</h4>
<hr />
<div class="row form-content" >
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exam.Name" class="control-label"></label>
                <input asp-for="Exam.Name" class="form-control" />
                <span asp-validation-for="Exam.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exam.SubjectId" class="control-label"></label>
                <select asp-for="Exam.SubjectId" class="form-control">
                    @foreach (var item in Model.Subjects)
                    {
                        <option value="@item.SubjectId">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Exam.NumberQuestions" class="control-label"></label>
                <input asp-for="Exam.NumberQuestions" class="form-control" />
                <span asp-validation-for="Exam.NumberQuestions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exam.Duration" class="control-label"></label>
                <input asp-for="Exam.Duration" class="form-control" />
                <span asp-validation-for="Exam.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exam.NumberTriesAllow" class="control-label"></label>
                <input asp-for="Exam.NumberTriesAllow" class="form-control" />
                <span asp-validation-for="Exam.NumberTriesAllow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exam.EndDate" class="control-label"></label>
                <input asp-for="Exam.EndDate" class="form-control" />
                <span asp-validation-for="Exam.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-default btn-create" />
            </div>
        </form>
    </div>
</div>

<div class="link-back-list">
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
